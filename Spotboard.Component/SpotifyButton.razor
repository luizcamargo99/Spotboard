<style>
    .spotify-btn {
        background: #16A34A;
        border-radius: 10rem;
        color: #fff;
        font-weight: bold;
        font-size: 1.2rem;
        border: none;
        width: 100%;
        height: 3rem;
        letter-spacing: .15rem !important;
    }
</style>

<button @onclick="OnClick" class="spotify-btn" id="@Id">
    @ChildContent
</button>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public Action OnClick { get; set; }

    [Parameter]
    public string Id { get; set; } = new Guid().ToString();
}
