@using Spotboard.Shared.Data;

<style>

    .my-hot-100 {
        display: flex;
        justify-content: center;
        align-items: center;
        align-content: center;
        flex-wrap: wrap;
        flex-direction: column;
        position: relative;
        width: fit-content;
        font-family: Arial, Helvetica, sans-serif;
        letter-spacing: 0;
    }

    .sample {
        width: 40rem;
        position: relative;
        justify-content: center;
        align-items: center;
        align-content: center;
        flex-wrap: wrap;
        flex-direction: column;
    }

    .footer-name {
        position: absolute;
        left: 2rem;
        top: 38.8rem;
        font-size: .7rem;
        color: #a7a7a7 !important;
    }

    .top-items {
        color: #000;
        position: absolute;
        display: flex;
        gap: 0.2vh;
        z-index: 10000;
        top: 13.28rem;
        flex-direction: column;
        width: 80%;
        text-align: left;
    }

    .top-item {
        width: 100%;
        display: flex;
        flex-direction: row;
        gap: .7rem;
        height: 2.435rem;
        align-items: center;
        padding-left: 0.1rem;
    }

        .top-item span {
            font-size: .9rem;
        }

    .track-name {
        width: 13rem;
        font-weight: bolder;
        display: flex;
        min-width: 14vh;
    }
</style>

<div class="my-hot-100" id="@Id">
    <img src="/images/sample.png" class="sample" />

    <div class="top-items">
        @foreach (var item in TopItems)
        {
            <div class="top-item">
                <span class="track-name">@item.Name</span>
                <span>@(string.Join(", ", item.Artists.Select(x => x.Name)?.ToList()))</span>
            </div>
        }
    </div>

    <div class="footer-name">hot 100 | top 10 by @Name</div>
</div>


@code {
    [Parameter]
    public IList<Item>? TopItems { get; set; }

    [Parameter]
    public string? Name { get; set; }

    [Parameter]
    public string? Id { get; set; }
}
